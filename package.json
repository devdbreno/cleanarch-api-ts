{
  "name": "cleanarch-api-ts",
  "version": "1.0.0",
  "description": "Clean Architecture API TypeScript",
  "repository": "git@github.com:devdbreno/cleanarch-api-ts.git",
  "license": "GPL-3.0",
  "author": "devdbreno <dbrenoti@gmail.com>",
  "scripts": {
    "docker-compose": "docker-compose up",
    "docker": "docker run clean-api-ts",
    "update": "npm-check -s -u",
    "lint": "eslint '{src,test}/**/*.ts' --fix",
    "build": "tsc -p tsconfig.build.json",
    "start:prod": "node dist/main.js",
    "start:dev": "nodemon src/main.ts",
    "predocker": "docker build -t clean-api-ts .",
    "prestart:prod": "npm run build",
    "prebuild": "rimraf dist",
    "test": "jest --passWithNoTests"
  },
  "dependencies": {
    "module-alias": "^2.2.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.1",
